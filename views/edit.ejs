<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
     <!-- icon -->
     <link rel="shortcut icon" href="/public/matrix.png">
     <!-- style file -->
     <link rel="stylesheet" href="/public/style.css">    
      <!-- font awesome  -->
      <script src="https://kit.fontawesome.com/1284c12520.js" crossorigin="anonymous"></script>
</head>
</head>
<body onload="myLoading()">

    <!-- start loading section -->
  <div id="loading"></div>
  <!-- end loading section -->
  
    <header>
        <h1>Welcome to Matrix Master Community</h1>
    </header>
  
        <div class="home">
          <a href="/"><i class="fa-solid fa-house"></i></a>
        </div>

    <form action="/update-question/<%=question._id %>" method="post" id="form" class="add-form">
        <div class="article-info">
            <input type="text" name="title" id="question-title" value="<%= question.title %>" class="q-input clr">
            <textarea name="description" id="question-description" class="a-input clr"><%= question.description %></textarea>
        </div>
        
            <button id="sub-btn">Submit</button>
        </form>       


        <footer class="ftr">
            <p>copyright &copy;2023 by <span>Islam & Kyrylo</span></p>
        </footer>
        
        
         <!-- aos js file from github -->
         <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
         <script>
           AOS.init();    
         </script>
        
         <!-- start loading section -->
         <script>   
        
            var preloader = document.getElementById("loading");
            
            function myLoading() {
              preloader.style.display ="none";
            }
                </script>
</body>
</html>